<Window x:Class="Practice10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice10"
        mc:Ignorable="d"
        Title="Практическая №10" Height="423" Width="285">
    <Grid>
        <Button Content="Заполнить массив" HorizontalAlignment="Center" Margin="0,301,0,0" VerticalAlignment="Top" Click="FillArray"/>
        <Button Content="Выполнить" ToolTip="Меняет максимальное и минимальное значение местами." HorizontalAlignment="Center" Margin="0,326,0,0" VerticalAlignment="Top" Click="SwapValues_Click"/>
        <TextBox x:Name="arrayLengthBox" HorizontalAlignment="Left" Margin="128,274,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label  Content="Размер массива:" HorizontalAlignment="Left" Margin="22,270,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="arrayListBox" Background="AliceBlue" HorizontalAlignment="Center" Height="255" Margin="0,10,0,0" VerticalAlignment="Top" Width="265"/>
        <Button Content="О программе" HorizontalAlignment="Left" Margin="10,360,0,0" VerticalAlignment="Top" Click="Info"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="237,360,0,0" VerticalAlignment="Top" Click="Exit"/>

    </Grid>
</Window>
